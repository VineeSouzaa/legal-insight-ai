# Dockerfile para h2oGPT - Análise de documentos legais
FROM python:3.10-slim

# Instalar dependências mínimas
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Instalar apenas o necessário
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    h2ogpt[cpu] \
    langchain

# Criar diretórios
RUN mkdir -p /app/models /app/data

# Expor portas
EXPOSE 7860
EXPOSE 7861

# Variáveis
ENV H2OGPT_SERVER_NAME=0.0.0.0
ENV H2OGPT_SERVER_PORT=7860
ENV H2OGPT_API_NAME=0.0.0.0
ENV H2OGPT_API_PORT=7861

# Iniciar servidor h2oGPT
CMD ["python", "-m", "h2ogpt", "--server_name=0.0.0.0", "--server_port=7860", "--api_name=0.0.0.0", "--api_port=7861"]
